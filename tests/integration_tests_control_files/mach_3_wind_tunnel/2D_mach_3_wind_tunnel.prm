# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 2
set run_type = flow_simulation
set pde_type = euler

# DG formulation
set use_weak_form = false
set flux_nodes_type = GLL

# Strong DG - LaxF
set use_split_form = false
set conv_num_flux = lax_friedrichs

# NSFR - Ra
#set use_split_form = true
#set two_point_num_flux_type = KG
#set conv_num_flux = two_point_flux_with_lax_friedrichs_dissipation
#set flux_reconstruction = cPlus
#set use_inverse_mass_on_the_fly = true

subsection limiter
  set bound_preserving_limiter = positivity_preservingWang2012
  set min_density = 1e-13
end

# ODE solver
subsection ODE solver
  set ode_output = verbose
  set ode_solver_type = runge_kutta
  set initial_time_step = 0.00000001
  set output_solution_every_x_steps = 5
  set runge_kutta_method = ssprk3_ex
  set print_iteration_modulo = 1
end

# freestream Mach number
subsection euler
  set mach_infinity = 3.0
end

subsection flow_solver
  set flow_case_type = mach_3_wind_tunnel
  set poly_degree = 2
  set final_time = 4.0
  #set constant_time_step = 0.0001
  set courant_friedrichs_lewy_number = 0.9
  set adaptive_time_step = true
  set unsteady_data_table_filename = double_mach_shock_energy
  subsection grid
    set grid_left_bound = 0.0
    set grid_right_bound = 1.0
    set number_of_grid_elements_per_dimension = 128
  end
end
