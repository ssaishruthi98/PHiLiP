# Listing of Parameters
# ---------------------

# Reference:
# Will Trojak and Tarik Dzanic. Positivity-preserving discontinuous spectral element methods for compressible multi-species flows. Computers & Fluids, page 106343, 2024.

# Number of dimensions
set dimension = 2

# Chemical species
set number_of_species = 2
set run_type = flow_simulation
set pde_type = multi_species_calorically_perfect_euler
set chemistry_input_file = /home/sshruthis/Codes/multispecies-PHiLiP/PHiLiP/build_debug/tests/chemistry/ReactionFiles/N2_O2.kinetics
set initial_mixture_fractions_input_file = /home/sshruthis/Codes/multispecies-PHiLiP/PHiLiP/build_debug/tests/chemistry/InitialMixtureFiles/InitialMixtureFractions_N2_O2.txt


# DG formulation
set use_weak_form = true
set non_physical_behavior = abort_run
set flux_nodes_type = GLL

# set directry to write output data
#set solution_vtk_files_directory_name = multi_species

# Note: this was added to turn off check_same_coords() -- has no other function when dim!=1
set use_periodic_bc = true

# degree of freedom renumbering not necessary for explicit time advancement cases
set do_renumber_dofs = false

# apply limiter
#subsection limiter
# set bound_preserving_limiter = positivity_preservingWang2012
# set min_density = 1e-13
#end

# numerical fluxes
set conv_num_flux = lax_friedrichs
set diss_num_flux = symm_internal_penalty

# ODE solver
subsection ODE solver
  set output_solution_every_x_steps = 10
  set ode_output = quiet
  set ode_solver_type = runge_kutta
  set runge_kutta_method = ssprk3_ex
end

# freestream Mach number
subsection euler
  set mach_infinity = 1.22
  set gamma_gas = 1.4
  set custom_boundary_for_each_state = 1.37636, -0.55957, 0.0, 1.5698, 1.0
end

subsection flow_solver
  set flow_case_type = shock_bubble
  set poly_degree = 3
  set final_time = 0.25
  set adaptive_time_step = false
  set constant_time_step = 0.25e-4
  set unsteady_data_table_filename = shock_bubble_energy
  subsection grid
    subsection positivity_preserving_tests
      set grid_xmin = 0.25
      set grid_xmax = 1.0
      set grid_ymin = 0.0
      set grid_ymax = 0.1

      set number_of_grid_elements_x = 75
      set number_of_grid_elements_y = 10
    end
  end
end
