# Listing of Parameters
# ---------------------
# Number of dimensions

set dimension = 1
# Chemical species
set species = 2
set pde_type = real_gas
set chemistry_input_file = ../../chemistry_files/O2_N2.kinetics
set run_type = flow_simulation

# DG formulation
set use_weak_form = true
set flux_nodes_type = GLL
set conv_num_flux = lax_friedrichs

#limiter flags
subsection limiter
  set use_tvb_limiter = true
  set max_delta_x = 0.0
  set tuning_parameter_for_each_state = 0,0,0,0
end

# ODE solver
subsection ODE solver
  set ode_output = quiet
  set ode_solver_type = runge_kutta
  set initial_time_step = 0.01
  #set output_solution_every_x_steps = 100
  set output_solution_every_dt_time_intervals = 0.01
  set runge_kutta_method = ssprk3_ex 
end

# freestream Mach number
subsection euler
  set mach_infinity = 1.5
end

subsection flow_solver
  set flow_case_type = multi_species_sod_shock_tube
  set poly_degree = 3
  set final_time = 0.2
  set courant_friedrichs_lewy_number = 0.25
  set adaptive_time_step = true
  set unsteady_data_table_filename = sod_shock_energy
  subsection grid
    set grid_left_bound = 0.0
    set grid_right_bound = 1.0
    subsection grid_rectangle
      set number_of_grid_elements_x = 400
    end
  end
end
